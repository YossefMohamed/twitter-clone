extends layouts/main-layout.pug

block content   
    
    if errorMessage
        span.errorMessage #{errorMessage}
    else 
        script.
            const chatId = '!{chat._id}';

        .chatPageContainer
            .chatTitleBarContainer
                input(type="text" , placeholder = "Enter the name of the chat..")#chatName 
            
            .mainContentContainer
                .chatContainer
                    .chatMessages
                    form.footer
                        textarea(name="messageInput", placeholder="Type a message...")#messageContent
                        button.sendMessageButton
                            i.fas.fa-paper-plane

block scripts
    script(src="/js/chatPage.js")